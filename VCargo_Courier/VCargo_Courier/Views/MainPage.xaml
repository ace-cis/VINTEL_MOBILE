                                           HorizontalTextAlignment="Center"  
                                           VerticalTextAlignment="Start" 
                                           FontAttributes="Bold" 
                                            Style="{DynamicResource ListItemDetailTextStyle}"
                                            FontSize="16"/>
                                    <!--    <Label Grid.Row="1" Grid.Column="3" Text="{Binding OrderDate}  " 
                                            LineBreakMode="WordWrap"
                                           HorizontalTextAlignment="Center"   
                                           FontAttributes="Bold" 
                                            Style="{DynamicResource ListItemDetailTextStyle}"
